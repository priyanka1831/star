
public class Star {
//write a piece of code
	
	    public static void main(String args[])
	    {
	    	//write a loop
	        int i, j;
	        for(i=0; i<3; i++)
	        {
	            for(j=0; j<=i; j++)
	            {
	                System.out.print("* ");
	            }
	            System.out.println();
	        }
	    }
	}
